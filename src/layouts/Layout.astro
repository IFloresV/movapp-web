---
import "@styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Movapp</title>
	</head>
	<body class="bg-gradient-to-br from-gray-200 to-white text-gray-800 min-h-screen">

		<Header />	
		<div class="px-4 py-6 md:px-8 mx-4 my-8 rounded-2xl shadow-xl border border-white/30 bg-white/70 backdrop-blur-md">
			<main class="max-w-6xl mx-auto">
			  <slot />
			</main>
		  </div>
	
		<Footer />
	  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
