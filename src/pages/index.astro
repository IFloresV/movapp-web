import Layout from "@layouts/Layout.astro";

---

<Layout>
  <section class="my-10 text-center px-6 py-12 max-w-5xl mx-auto bg-white/70 backdrop-blur-md rounded-lg shadow-lg">
    <h2 class="text-xl font-medium text-gray-700">Tu Protección Digital Comienza Aquí</h2>
